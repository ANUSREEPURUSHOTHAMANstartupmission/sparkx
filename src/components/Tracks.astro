---
let buildings1 = [
	{
		"image": "/img/t1.png",
		"name": "Farmer Collectives & Value Chains",
        "content": "Strengthening Farmer Producer Organizations (FPOs) and cooperatives to enhance aggregation, processing, and value addition across crops."
    },
    {
		"image": "/img/t2.png",
		"name": "Sustainable Farming & Technology",
        "content": "Introducing climate-resilient and sustainable agricultural practices, backed by technology adoption among small and marginal farmers."
    },
    {
		"image": "/img/t3.png",
		"name": "Startup Innovation for Agriculture",
        "content": "Led by Kerala Startup Mission, this subcomponent supports 150 agri-tech startups with funding and incubation, helping commercialize their products and bring them into the hands of 40,000+ farmers and agri-enterprises."
    },
    {
		"image": "/img/t4.png",
		"name": "Women & Youth Empowerment",
        "content": "Special focus on empowering women entrepreneurs and engaging youth in agri-enterprise and rural innovation."
    },
    {
		"image": "/img/t5.png",
		"name": "Market Linkages & Digital Platforms",
        "content": "Connecting farmers and producers directly with markets, buyers, and logistics through digital tools and platforms."
    }
	
];


---
<div class="flex flex-wrap">
  
  {buildings1.map((item) => (

    <a target="_blank" href={item.link??"#"} class="item1 item md:w-1/5 w-full h-[25rem]  " >

      <img src={item.image} alt="" class="object-cover w-full border-r h-full" >

      <div class="content text-xl border-r-[.5px] ">
        {item.name}  

        <div class="details text-base mt-2 font-light">
          <div class="">
            {item.content}  
          </div>
          
          { item.link &&
            <button class="px-5 py-2 text-xs bg-white text-huddle">Read More</button>
          }

        </div>

      </div>
      
    </a>

  ))}
  
</div>


<script>
  function hover_event(item){
    item.addEventListener('mouseenter', function(e){
      
      var el = e.target.closest('.item');

      var items = [...el.parentNode.querySelectorAll('.item')];

      items.map(a => {
        a.classList.remove('md:w-1/5');
        a.classList.add('md:w-1/6');
      })

      el.classList.remove('md:w-1/6');
      el.classList.add('md:w-1/3');
      
    })

    item.addEventListener('mouseleave', function(e){
      
      var el = e.target.closest('.item');
      var items = [...el.parentNode.querySelectorAll('.item')];

      items.map(a => {
        a.classList.add('md:w-1/5');
        a.classList.remove('md:w-1/6');
      })

      el.classList.add('md:w-1/5');
      el.classList.remove('md:w-1/3');
      
    })
  }

  let items1 = [...document.querySelectorAll('.item1')];
  items1.map(hover_event)

  let items2 = [...document.querySelectorAll('.item2')];
  items2.map(hover_event)

</script>

<style lang="scss">

  .item1, .item2{
    position: relative;
    transition: all 500ms ease;

    .content{
     
      color: #fff;
      line-height: 35px;
      padding-bottom: 20px;
      text-transform: capitalize;
      position: absolute;
      top: 50%;
      z-index: 5;
      text-align: center;
      width: 100%;
      transform: translateY(-50%);
      font-weight: bold;
      
      padding: 0 1.5rem;
      transition: all 500ms ease;

      .details{
        display: none;
        line-height: 1.2em;
      }
    }

    &:hover{
      &::after{
        background: #03502bf0;
      }
      img{
        transform: translateX(0);
      }
      .content{
        .details{
          display: block;
        }
      }
    }

    &::after{
      position: absolute;
      top: 0;
      left: 0;
      content: '';
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
    }

    img{
     
      // transition: all 500ms ease;
    }
  }

</style>